# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Microservice URLs
ORDERS_GRPC_URL=localhost:3001
PRODUCTS_GRPC_URL=localhost:3002
CUSTOMERS_GRPC_URL=localhost:3003

# Features
ENABLE_GRPC=false

# Logging
LOG_LEVEL=debug

# Request settings
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=10mb
